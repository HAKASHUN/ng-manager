.entity-list

  .entity-list-header
    padding 0.4em 10px

    md-button
      padding 0.4em 1em
      margin 0.4em

  table
    table-layout fixed
    margin-bottom 0

    thead
      th
        border-bottom-width 1px

    th, td
      padding 8px 4px 10px 8px

    th
      text-align left

    td
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
      cursor pointer
      border-top none

      input
        width 100%
        line-height inherit
        padding 0
        border none

    tbody
      tr:hover
        background-color #eef

    th.actions, td.actions
      width 60px
      padding 6px 5px 0 5px

    td.actions:hover
      background-color transparent

    td.actions
      img:hover
        background #fff
        border-radius 3px

  #entity-table-body
    overflow-y auto
